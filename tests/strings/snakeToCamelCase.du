/**
 * snakeToCamelCase.du
 *
 * Testing the str.snakeToCamelCase() method
 *
 * .snakeToCamelCase() returns a new string converted from snake case to camel case. 
 */
from UnitTest import UnitTest;

class TestStringSnakeToCamelCase < UnitTest {
    testStringSnakeToCamelCase() {
        this.assertEquals("example_of_snake_case".snakeToCamelCase(), "exampleOfSnakeCase");
        this.assertEquals("a_b".snakeToCamelCase(), "aB");
        this.assertEquals("example_of_a_much_longer_string_to_test".snakeToCamelCase(), "exampleOfAMuchLongerStringToTest");
        this.assertEquals("_".snakeToCamelCase(), "_");
        this.assertEquals("stringWithNoUnderscore".snakeToCamelCase(), "stringWithNoUnderscore");
    }
}

TestStringSnakeToCamelCase().run();
