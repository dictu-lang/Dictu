*
* Testing class properties
*/

class Test {
    init() {
        this.x = 10;
    }

    change() {
        this.x = this.x + 10;
    }
}

var obj = Test();

assert(obj.x == 10);
obj.change();
assert(obj.x == 20);
obj.x += 10;
assert(obj.x == 30);
obj.x -= 10;
assert(obj.x == 20);
obj.x *= 10;
assert(obj.x == 200);
obj.x /= 10;
assert(obj.x == 20);
++obj.x;
assert(obj.x == 21);
--obj.x;
assert(obj.x == 20);

assert(obj.hasAttribute("x"));
assert(!obj.hasAttribute("y"));