/**
 * toString.du
 *
 * Testing the bool.toString() method
 *
 * .toString() returns the string representation of a bool
 */

from UnitTest import UnitTest;

class TestBoolToString < UnitTest {
    testBoolLiteralToString() {
        this.assertEquals(true.toString(), "true");
        this.assertEquals(false.toString(), "false");
    }

    testBoolVariableToString() {
        const trueBool = true;
        const falseBool = false;

        this.assertEquals(trueBool.toString(), "true");
        this.assertEquals(falseBool.toString(), "false");
    }
}

TestBoolToString().run();